<application>
    <name>Test IMU sensor</name>
    <description>A fixture to test the orientation data from the IMU</description>
    <version>1.0</version>
    <authors>
        <author email="martina.gloria@iit.it">Martina Gloria</author>
    </authors>
    <module>
        <name>yarpscope</name>
        <parameters>--xml ../src/imu/plot.xml</parameters>
        <node>localhost</node>
        <ensure>
            <wait when="start">1</wait>
        </ensure>  
    </module>
    <module>
        <name>ctpService</name>
        <parameters>--robot icub --part head --period 10</parameters>
        <node>localhost</node>
    </module>
    <module>
        <name>ctpService</name>
        <parameters>--robot icub --part left_arm --period 10</parameters>
        <node>localhost</node>
    </module>
    <module>
        <name>ctpService</name>
        <parameters>--robot icub --part right_arm --period 10</parameters>
        <node>localhost</node>
    </module>
    <module>
        <name>move.sh</name>
        <parameters>sequence</parameters>
        <node>localhost</node>
    </module>
</application>
