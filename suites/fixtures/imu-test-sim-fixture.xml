    <version>1.0</version>
    <authors>
        <author email="martina.gloria@iit.it">Martina Gloria</author>
    </authors>
    <module>
        <name>ctpService</name>
        <parameters>--robot icubSim --part head --period 10</parameters>
        <node>localhost</node>
    </module>
    <module>
        <name>ctpService</name>
        <parameters>--robot icubSim --part left_arm --period 10</parameters>
